{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ACCESS_TOKEN", "PROJECT", "ACCESS_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
