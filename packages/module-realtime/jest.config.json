{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.+(ts|tsx|js)", "**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
  "moduleNameMapper": {
    "^@graphand/client$": "<rootDir>/../main/src"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
